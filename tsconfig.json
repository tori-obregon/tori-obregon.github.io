{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",                                
    "module": "commonjs",                               
    "baseUrl": ".",                                 
    "paths": {
      "@/components/ui/*": ["./src/components/ui/*"],
      "@/*": ["./src/*"],
    },                             
    "allowImportingTsExtensions": true,              
    "noEmit": true,                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    /* Type Checking */
    "strict": true,                                     
    "skipLibCheck": true                             
  }
}
